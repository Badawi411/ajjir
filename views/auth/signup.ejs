<%- include('../shared/includes/head', {pageTitle : 'Sign up'}) %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/styles/forms.css">
<script src="/scripts/toggle-password.js" defer></script>
<script src="/scripts/google.js" defer></script>
</head>
<body>
    <main>
      <ul id="reverse">
        <li id="logo">
          <div>
            <h1><a href="/">A<span id="jj">jj</span>ir</a></h1>
            <img src="/images/toolkit.png" alt="toolkit">
          </div>
        </li>
        <li>
          <form action="/signup" method="POST" class="forms">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <% if(inputData.errorMessage){ %>
              <section class="alert">
                <h2>Invalid input</h2>
                <p><%= inputData.errorMessage %></p>
              </section>
            <% } %>
            <p class="description">Create a new account</p>
            <p>
              <label for="name" class="shadow">User Name</label>
              <input type="text" id="name" name="name" value="<%= inputData.name %>" required/>
            </p>
            <p>
              <label for="email" class="shadow">Email</label>
              <input type="email" id="email" name="email" value="<%= inputData.email %>" required/>
            </p>
            <p>
              <label for="phone" class="shadow">Phone Number</label>
              <input type="text" id="phone" name="phone" value="<%= inputData.phone %>" required/>
            </p>
            <p id="pass-signup">
              <label for="password" id="pass-label" class="shadow">Password 
                <span class="input-group-addon" role="button" title="veiw password" id="passBtn">
                <i class="fa fa-eye fa-fw" aria-hidden="true"></i>
              </span>
              </label>
              <input type="password" id="password" name="password" minlength="6"  value="<%= inputData.password %>" required/>
            </p>
            <p>
              <label for="confirm-password" class="shadow">Confirm Password</label>
              <input type="password" id="confirm-password" name="confirm-password" minlength="6" value="<%= inputData.confirmPassword %>" required/>
            </p>
            <button class="btn">Sign up</button>
            <p class="shadow">Or</p>
              <button class="google-btn">
                <div id="icon"><img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/></div>
                Log in with Google
              </button>
              <p>Already have an account?  <a href="/login" class="link">Log in</a></p>
          </form>
        </li>
      </ul>
        
        
    </main>
    <%- include('../shared/includes/footer') %>
</body>
</html>
