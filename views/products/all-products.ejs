<%- include('../shared/includes/head', {pageTitle : 'All products'}) %>
<link rel="stylesheet" href="/styles/navigation.css">
<link rel="stylesheet" href="/styles/notifications.css">
<link rel="stylesheet" href="/styles/all-products.css">
<link rel="stylesheet" href="/styles/money-overlay.css">
<script src="/scripts/filter-search.js" defer></script>
<script src="/scripts/notification.js" defer></script>
<script src="/scripts/money-overlay.js" defer></script>

</head>
<body>
  <header>
    <%- include('../shared/includes/search-nav', {pageTitle : 'All products', id: locals.uid}) %>
    <div id="sort">
      <div id="sort-icon">
        <img src="/icons/sort.svg" alt="sort">
        <p>Sort</p>
      </div>
      <div>
        <img src="/icons/row-vertical.svg" alt="row-vertical">
      </div>
    </div>
  </header>
  <main>
    <%- include('../shared/includes/money-overlay') %>
    <!-- <a href="/products/new" class="btn">Add</a> -->
    <div id="filters-items">
      <aside>
        <ul>
          <li id="categories">
            <h3>Categories</h3>
            <ul>
              <li>Tools</li>
              <li>Cars</li>
              <li>Houses</li>
              <li>Electronics</li>
              <li>Books</li>
            </ul>
          </li>
          <li id="item-reviewa">
            <h3>Item Review</h3>
            <ul>
              <li><img src="/icons/4s.svg" alt="4s"></li>
              <li><img src="/icons/3s.svg" alt="3s"></li>
              <li><img src="/icons/2s.svg" alt="2s"></li>
              <li><img src="/icons/1s.svg" alt="1s"></li>
            </ul>
          </li>
          <li id="status">
            <h3>Status</h3>
            <ul>
              <li>
                <label for="available">
                  <input type="checkbox" id="available" name="available" class="availability"> Available
                </label>
              </li>
              <li>
                <label for="rented">
                  <input type="checkbox" id="rented" name="rented" class="availability"> Rented
                </label>
              </li>
            </ul>
          </li>
          <li id="price">
            <h3>Price / Day</h3>
            <ul>
              <li>Under 100</li>
              <li>100 - 500</li>
              <li>500 - 1000</li>
              <li>Over 1000</li>
            </ul>
          </li>
        </ul>
      </aside>
      
      <ul id="products-grid">
        <% for (const product of products){ %>
             <li>
              <form action="/products/<%= product.id %>" method="get">
                <button>
                  <%- include('../shared/includes/product-item' , { product: product }) %>
                </button>
              </form>
            </li>
        <% } %>
      </ul>
    </div>
  </main>
  <%- include('../shared/includes/footer') %>
</body>
</html>