<%- include('../shared/includes/head' , {pageTitle: 'Profile'}) %>
<link rel="stylesheet" href="/styles/landing.css">
<link rel="stylesheet" href="/styles/show-profile.css">
<link rel="stylesheet" href="/styles/money-overlay.css">
<link rel="stylesheet" href="/styles/notifications.css">


<link
rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

<script src="/scripts/notification.js" defer></script>
<script src="/scripts/money-overlay.js" defer></script>
</head>
<body>
  <%- include('../shared/includes/nav', { pageTitle: 'Profile' ,id: id }) %>
<main>
  <%- include('../shared/includes/money-overlay') %>
  <ul id="profile-overview">
    <li id="images">
      <img src="/images/cover.png" alt="cover" id="cover">
      <article>
        <img src="/images/profile.png" alt="profile">
        <div>
          <h2><%= user.name %></h2>
          <div>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star-half-o"></span>
            <span class="fa fa-star"></span>
            <span id="rate">3.7</span>
            <span id="review"><a href="" class="link">All reviews</a></span>
          </div>
        </div>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorem magnam accusamus consequatur temporibus doloribus 
          vitae aliquam porro corporis aperiam at. Impedit, aperiam aspernatur. Non, alias consectetur porro numquam quae sed.
        </p>
      </article>
    </li>
    <li>
      <ul id="profile-content">
        <li id="user-settings">
          <div>
            <p>My Items</p>
            <p>Rent History</p>
            <p>Settings</p>
            <a href="/buy-jj/<%= id %>" id="jj">Buy JPoints</a>
          </div>
        </li>
        <li id="info-verify">
          <section id="verify">
            <p>Account Verification</p>
            <% if (user.isVerified) { %>
              <div><img src="/icons/right.svg" alt="right"><span id="right">You're All Set</span></div>
              <button class="btn">Add Bank Account</button>
            <% } else { %>
              <div><img src="/icons/wrong.svg" alt="right"><span id="wrong">You're Not Set</span></div>
              <form action="/users/verification/<%= id %>" method="GET">
                <button class="btn">Verify Your Account!</button>
              </form>
            <% } %>
          </section>
          <section id="user-info">
            <div>
              <p><span><img src="/icons/location.svg" alt="location"></span> <%= user.address.street %>, <%= user.address.city %>, <%= user.address.country %></p>
              <p><span><img src="/icons/call.svg" alt="call"></span> <%= user.phone %></p>
              <form action="/users/edit-profile/<%= id %>" method="get">
                <span><img src="/icons/edit.svg" alt="edit"></span> <button class="link">Edit Profile Details</button>
              </form>

            </div>
          </section>
        </li>
        <li id="dashboard">
          <h3>Dashboard</h3>
          <hr>
          <img src="/images/dashboard.png" alt="dashboard">
        </li>
      </ul>
    </li>
  </ul>
</main>
<%- include('../shared/includes/footer') %>
</body>
</html>